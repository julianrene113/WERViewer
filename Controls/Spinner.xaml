<UserControl
    x:Class="WERViewer.Controls.Spinner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WERViewer.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="50"
    d:DesignWidth="50"
    mc:Ignorable="d">
    <Grid Margin="0">
        <Canvas
            x:Name="PART_Canvas"
            Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=UserControl}}"
            CacheMode="BitmapCache"
            SnapsToDevicePixels="True" />
    </Grid>
</UserControl>
